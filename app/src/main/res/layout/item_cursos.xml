<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_cursos"
                android:src="@drawable/bannerprincipalcomputacion"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="114dp">
            </ImageView>
            <TextView
                android:id="@+id/title_cursos"
                android:layout_below="@+id/img_cursos"
                android:text="Title Cursos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/description_cursos"
                android:layout_below="@+id/title_cursos"
                android:text="Title Description"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


    </RelativeLayout>



</androidx.cardview.widget.CardView>